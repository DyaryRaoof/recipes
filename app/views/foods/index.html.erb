<h1 class="text-center text-success">Foods</h1>

<div class="text-end">
<%= link_to "New food", new_food_path, class:"btn btn-primary my-3" %>
</div>

<table class="table table-hover table-striped table-primary" >
  <thead>
    <tr>
      <th scope="col">Name:</th>
      <th scope="col">Measurement unit:</th>
      <th scope="col">Price:</th>
      <th scope="col">Action:</th>
    </tr>
  </thead>

   <tbody>
  <% @foods.each do |food| %>
    <%= render food %>
  <% end %>
  </tbody>
</table>

